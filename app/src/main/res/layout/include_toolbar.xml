<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <ImageView
            android:id="@+id/left_icon_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="@dimen/material_layout_vertical_spacing_between_content_areas"
            android:src="@mipmap/ic_launcher"
            android:padding="8dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/center_text_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_gravity="center"
            android:layout_margin="@dimen/material_layout_vertical_spacing_between_content_areas"
            android:padding="@dimen/material_layout_vertical_spacing_between_content_areas"
            android:text="EVENTERS"
            android:textColor="@color/material_light_white"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/right_icon_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="right"
            android:layout_margin="@dimen/material_layout_vertical_spacing_between_content_areas"
            android:src="@drawable/ic_user"
            android:padding="8dp"
            tools:ignore="ContentDescription" />


    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>